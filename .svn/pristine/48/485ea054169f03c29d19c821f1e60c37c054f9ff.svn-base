		AjaxObject ajax = new AjaxObject();
		Student one = dao.queryStudent(student);
		if(one != null) {
			ajax.setStatusCode("301");
			ajax.setMessage("工号重复，请重新输入");
		}else{
			try{
				dao.insertStudent(student);
