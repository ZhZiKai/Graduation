	}

	
	//讲字符串数组转化为int类型数组
	public int[] changeInt(String[] str) {
		int[] ids = new int[str.length];
		for(int i = 0; i < ids.length; i++) {
			ids[i] = Integer.parseInt(str[i]);
		}
		return ids;
	}

